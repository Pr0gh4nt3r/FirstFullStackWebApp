{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2023",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    // Fehler in externen Declaration-Files überspringen
    // "skipLibCheck": true,
    // Nur den standard-@types-Ordner berücksichtigen
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
